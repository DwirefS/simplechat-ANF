# Azure Cosmos DB
# Use connection string OR endpoint/key OR managed identity
# e.g., https://mycosmosdb.documents.azure.com:443/
AZURE_COSMOS_ENDPOINT="<your-cosmosdb-account-uri>"
# Options: "key", "connection_string", "managed_identity"
AZURE_COSMOS_AUTHENTICATION_TYPE="key"
# if using key, then populate the following:
AZURE_COSMOS_KEY="<your-cosmosdb-primary-key>"


# Azure AD Authentication (Required)
CLIENT_ID="<your-app-registration-client-id>"
TENANT_ID="<your-azure-ad-tenant-id>"
# SECRET_KEY should be a long, random, secret string (e.g., 32+ chars) used for Flask session signing. Generate one securely.
SECRET_KEY="Generate-A-Strong-Random-Secret-Key-Here!"
# AZURE_ENVIRONMENT: Set based on your cloud environment
# Options: "public", "usgovernment", "custom"
AZURE_ENVIRONMENT="public"


# =============================================================================
# Azure NetApp Files Configuration (Optional)
# =============================================================================
# Use Azure NetApp Files as the storage backend instead of Azure Blob Storage.
# ANF provides multi-protocol access: S3 API, NFS, and SMB to the same data.

# Storage backend toggle: "blob" (default) or "anf"
STORAGE_BACKEND="blob"

# ANF Object REST API endpoint (required if STORAGE_BACKEND="anf")
# Example: https://<netapp-account>.blob.netapp.azure.com
ANF_OBJECT_API_ENDPOINT=""

# ANF authentication type: "key" or "managed_identity"
ANF_AUTH_TYPE="key"

# ANF S3 access credentials (required if ANF_AUTH_TYPE="key")
ANF_ACCESS_KEY=""
ANF_SECRET_KEY=""

# ANF service level for reference (configured during deployment)
# Options: "Standard", "Premium", "Ultra"
ANF_SERVICE_LEVEL="Premium"

# ANF bucket names (S3 buckets that map to document containers)
ANF_USER_DOCUMENTS_BUCKET="user-documents"
ANF_GROUP_DOCUMENTS_BUCKET="group-documents"
ANF_PUBLIC_DOCUMENTS_BUCKET="public-documents"